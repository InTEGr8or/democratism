{
  "name": "democratism",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev &",
    "kill": "pkill -f astro",
    "restart": "npm run kill && npm run dev:log",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "compile-enrichment": "tsc -p tsconfig.script.json",
    "enrich-amazon": "node dist/scripts/enrich-amazon-images.js",
    "compile-scripts": "tsc -p tsconfig.script.json",
    "check-content": "node dist/scripts/check-subfolder-content.js",
    "capture-screenshot": "node dist/scripts/capture-screenshot.js",
    "dev:log": "mkdir -p temp && astro dev > temp/dev-$(date +%Y%m%d-%H%M%S).log 2>&1"
  },
  "dependencies": {
    "@astrojs/language-server": "^2.15.4",
    "@astrojs/mdx": "^4.3.3",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.4.2",
    "@astrojs/tailwind": "^6.0.2",
    "@sentry/astro": "^8.52.0",
    "@spotlightjs/astro": "^2.4.3",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "astro": "^5.12.8",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "starlight-llms-txt": "^0.4.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.2.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.22.0",
    "ts-node": "^10.9.2"
  }
}