---
// src/components/ContentPanel.astro
export interface Props {
  title: string;
  summary: string;
  mainImage: string | undefined;
  href: string;
  excerpt: string;
}

const { title, summary, mainImage, href, excerpt } = Astro.props;
---

<a href={href} class="block">
  <div> {/* Removed p-4 */}
    {mainImage && (
      <img src={mainImage} alt={title} class="w-full h-48 object-cover rounded-md mb-4" />
    )}
    <h2 class="text-xl font-semibold mb-2">{title}</h2>
    <h4 class="text-gray-600 mb-2">{summary}</h4>
    <p class="text-gray-500 text-sm">{excerpt}</p>
  </div>
</a>