---
import Head from "../components/Head.astro";
import GtmBody from "../components/GtmBody.astro";
import Header from "../components/Header.astro";
import StripeBuyButton from "../components/StripeBuyButton.astro";
import "../styles/global.css";

interface Props {
  content?: {
    title?: string;
    description?: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
  className?: string;
}

const { content = { title: "" } } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage } = content;
---

<!doctype html>
<html lang="en">
  <Head title={title} description={description} /> {/* Pass title and description to Head */}
  <body>
    <GtmBody />
    <div class="px-4 md:px-8 lg:px-16">
      <Header />
    </div>
    <div class="px-4 md:px-8 lg:px-16">
      <slot />
    </div>
    <div class="flex flex-col items-center mt-16">
      <h3 class="text-2xl font-bold">
        Find out what's coming next
      </h3>
      <StripeBuyButton />
    </div>
  </body>
</html>
