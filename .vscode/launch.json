{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Astro Debug (Compound)",
      "compounds": [
        "Launch Astro Dev Server (with Debug)",
        "Attach to Astro Dev Server"
      ],
      "type":"node",
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome in Incognito Mode",
      "url": "http://localhost:4321",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": [
        "--incognito",
        "--new-window"
      ],
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/src/*"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Astro Dev Server",
      "port": 9229,
      "protocol": "inspector",
      "restart": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Launch Astro Dev Server (with Debug)",
      "command": "npm run dev",
      "console": "integratedTerminal"
    }
  ]
}