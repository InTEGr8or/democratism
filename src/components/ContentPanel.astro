---
// src/components/ContentPanel.astro
export interface Props {
  title: string;
  summary: string;
  mainImage: string | undefined; // Changed from mainImage?: string;
  href: string;
}

const { title, summary, mainImage, href } = Astro.props;
---

<a href={href} class="block">
  <div class="p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200">
    {mainImage && (
      <img src={mainImage} alt={title} class="w-full h-48 object-cover rounded-md mb-4" />
    )}
    <h2 class="text-xl font-semibold mb-2">{title}</h2>
    <p class="text-gray-600">{summary}</p>
  </div>
</a>