---
// src/components/ContentPanel.astro
export interface Props {
  title: string;
  summary: string;
  mainImage: string | undefined;
  href: string;
  excerpt: string;
}

const { title, summary, mainImage, href, excerpt } = Astro.props;
---

<a href={href} class="block">
  <div class="p-4"> {/* Removed rounded-lg, shadow-md, hover:shadow-lg, transition-shadow, duration-200 */}
    {mainImage && (
      <img src={mainImage} alt={title} class="w-full h-48 object-cover rounded-md mb-4" />
    )}
    <h2 class="text-xl font-semibold mb-2">{title}</h2>
    <p class="text-gray-600 mb-2">{summary}</p> {/* Added mb-2 for spacing */}
    <p class="text-gray-500 text-sm">{excerpt}</p> {/* Wrapped excerpt in p tag, added text-sm for smaller font */}
  </div>
</a>